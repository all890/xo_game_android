<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/listImage"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/robot_circular_icon">

        </com.google.android.material.imageview.ShapeableImageView>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/listImage"
            android:id="@+id/textListGridView"
            app:columnCount="1"
            app:rowCount="3"
            android:layout_marginTop="13dp">

            <TextView
                android:id="@+id/playDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="วันที : 28-10-2022" />

            <TextView
                android:id="@+id/playTypeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="โหมดเกม : MULTIPLAYER" />

            <TextView
                android:id="@+id/resultTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ผลเกม : เสมอ" />

            <TextView
                android:id="@+id/boardSizeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ขนาด : เสมอ" />

        </androidx.gridlayout.widget.GridLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/textListGridView"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/search_icon">

        </ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>